{
	"name": "myproject",
	"version": "1.0.0",
	"main": "server.ts",
	"scripts": {
		"build": "tsc && tsc-alias",
		"start:dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
		"dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"start:prod": "cross-env NODE_ENV=production node dist/app.js",
		"start": "npm run start:prod"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.5.0",
		"express": "^4.19.2",
		"mongoose": "^8.2.2",
		"morgan": "^1.10.0",
		"winston": "^3.12.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "~4.17.13",
		"@types/node": "~18.16.9",
		"@types/nodemon": "^1.19.6",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"eslint": "^8.57.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-extra": "^0.1.0",
		"eslint-plugin-extra-rules": "^0.0.0-development",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-sonarjs": "^0.24.0",
		"nodemon": "^3.0.0",
		"prettier": "^3.2.5",
		"tsc-alias": "^1.8.8",
		"tsx": "^4.7.1",
		"typescript": "^5.3.2"
	}
}
